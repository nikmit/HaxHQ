{% extends 'layout.j2' %}

{% block body %}
  <div id='usetoken' style='display: flex; justify-content: center; align-items: center; height: calc(100vh - 180px);'>
    <div>
    <h3 style='margin-top: 30px;'>Token authentication successful</h3>
    {% with messages = get_flashed_messages(with_categories=true) %}
      {% if messages %}
        {% for category, message in messages %}
        <div class='flash {{category}}'>{{ message }}</div>
        {% endfor %}
      {% endif %}
    {% endwith %}
    <img src='{{url_for('static', filename='img/unlocked.svg')}}' style='display: block; margin: 40px auto; width: 6em;'/>
    <h3>You will be forwarded to the user settings page shortly, so you can set your password.</h3>
    <p class='center'>Go to <a href='{{url_for('usersettings')}}'>user settings</a> now.</p>
    </div>
  </div>
{% endblock %}
